{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "inlineSourceMap": true,
      "outDir": "./dist",
      "moduleResolution": "node",
      "lib": [
        "esnext",
        "es5",
        "es6"
      ],
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "test",
        "**/*-test.ts"
    ]    
}